{% extends "::admin.html.twig" %}

{% block additional_style %}
    <link href="{{ asset('bundles/admin/css/Forms.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/admin/css/Errors.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block nav %}
    {% import '::main_admin_menu.html.twig' as mainMenu %}
    {{ mainMenu.admin_navigation('category') }}
{% endblock %}

{% block breadcrumbs %}
    &raquo; <a href="{{ path('admin_portada') }}">Administraci&oacute;n</a>
    &raquo; <a href="{{ path('admin_categoria_index') }}">Categor&iacute;as</a>
{% endblock %}
{% block header_title %} <p id="title">Editar Categor&iacute;a</p> {% endblock %}

{% block main %}
    <div class="adds">
        <div class="dataAdds">
            <form action="{{ path('admin_categoria_editar', {'id': categoria.id}) }}" method="post">
                {#{{ form_widget(formulario, {'attr': {'class':'add_forms'}}) }}#}
                <div class="summary-errors">
                    {{ form_errors(form.nombre) }}
                </div>
                <div class="add_forms">
                    {{ form_errors(form) }}
                    <div {% if form_errors(form.nombre) %} class="form-field error-field" {% else %} class="form-field" {% endif %}>
                        {{ form_label(form.nombre) }}
                        <div class="form-inputs">
                            {{ form_widget(form.nombre) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}
                </div>
                <input class="button button-bottom" type="submit" value="Modificar" />
                <a class="button button-bottom" href="{{path('admin_categoria_index')}}">Volver al listado</a>
            </form>
        </div>
    </div>
{% endblock %}

{% block footerNav %}
    {% import '::footer_admin_menu.html.twig' as footerMenu %}
    {{ footerMenu.admin_footer_nav('category', "add") }}
{% endblock %}